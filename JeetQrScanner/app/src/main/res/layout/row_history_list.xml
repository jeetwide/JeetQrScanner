<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/screen_8d">


    <RelativeLayout
        android:id="@+id/rlMainLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/screen_14d"
        android:paddingRight="@dimen/screen_8d"
        android:paddingTop="@dimen/screen_8d"
        android:paddingBottom="@dimen/screen_8d"

        android:background="@color/white">


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/img"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_link_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/screen_14d"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/screen_8d"
            android:src="@drawable/ic_delete_forever_blue_grey_500_24dp"
            android:id="@+id/iv_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/tvtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"

            android:fontFamily="amiko_semibold"
            android:maxLines="1"
            android:text="Text title"
            android:textAlignment="center"
            android:textColor="@color/black3"
            android:textSize="@dimen/txt_18s" />

        <TextView
            android:id="@+id/tvdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtype"
            android:layout_toRightOf="@+id/img"
            android:ellipsize="end"
            android:fontFamily="@font/cagliostro"
            android:maxLines="5"

            android:text="Text Detail"
            android:textSize="@dimen/txt_14s"
            android:textColor="@color/black9"
            />



    </RelativeLayout>


</RelativeLayout>